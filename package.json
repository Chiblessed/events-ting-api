{
    "name": "events-ticketing",
    "description": "Manage your events",
    "version": "0.0.1",
    "author": "tobisupreme",
    "type": "module",
    "engines": {
        "node": ">=18"
    },
    "main": "dist/index.js",
    "exports": "./dist/index.js",
    "scripts": {
        "start": "tsx src/index.ts",
        "start:dev": "tsx watch src/index.ts",
        "build": "npx pkgroll",
        "migration:generate": "npx prisma migrate dev --create-only --schema=prisma/schema.prisma",
        "migration:apply": "npx prisma migrate deploy --schema=prisma/schema.prisma",
        "schema.format": "npx prisma format --schema=prisma/schema.prisma",
        "schema.generate": "npx prisma generate --schema=prisma/schema.prisma",
        "db.seed": "ts-node ./src/common/prisma/seed.ts",
        "lint": "eslint .",
        "format:check": "prettier --check .",
        "format:write": "prettier --write ."
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,md,yml,yaml}": "npm run format:write",
        "*.{js,ts}": "npm run lint"
    },
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^5.0.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^22.9.0",
        "eslint": "^9.14.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prisma": "^5.22.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    }
}
